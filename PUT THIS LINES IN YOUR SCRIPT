sh-ota(){
#SH-OTA v1.2_alpha By Deic & DiamondBond

	#Edit from here
	main_cloud="https://yoursite/main.sh"

	#Don't edit from here
	main_ext="$EXTERNAL_STORAGE/Download/main.sh"
	main_tmp="/data/local/tmp/main.sh"

	clear
	if [ -f /system/xbin/curl ]; then
		curl -k -L -o $main_tmp $main_cloud >/dev/null 2>&1
		chmod 755 $main_tmp
		$main_tmp
	else
		am start -a android.intent.action.VIEW -n com.android.browser/.BrowserActivity $main_cloud >/dev/null 2>&1
		if [ -f $main_ext ]; then
			am force-stop com.android.browser
			cp -f $main_ext $main_tmp
			rm -f $main_ext
			chmod 755 $main_tmp
			$main_tmp
			exit
		fi
	fi
}
sh-ota
